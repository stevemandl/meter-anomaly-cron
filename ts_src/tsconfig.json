    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es5",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": [
      "es2017"
    ],
    "rootDir": "/",
    "typeRoots": [
      "node_modules/@types",
      "types"
   ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}